<h1>Credit Card Transaction Settings</h1>

<table style="width: 600px;">
  <thead>
    <tr>
      <th>Description</th>
      <th>Fee</th>
    </tr>
  </thead>
    <tfoot>
      <tr>
        <td> Total </td>
        <td><%= @total_fee %></td>
      </tr>
    </tfoot>

    <% @fees.each do |fee|%>
    <tr>
      <td><%= fee[:description] %></td>
      <td><%= fee[:fee]%></td>
    </tr>
    <% end %>
</table>


    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="Peter's Speakeasy"
          data-description="Immigration Application"
          data-amount="<%= @total_fee*100 %>">
      </script>
